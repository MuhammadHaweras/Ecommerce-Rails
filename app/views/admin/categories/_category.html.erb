<div id="<%= dom_id category %>">
  <p>
    <strong>Name:</strong>
    <%= category.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= category.description %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= category.image.present? ? image_tag(category.image) : image_tag("https://via.placeholder.com/50") %>
  </p>

</div>
