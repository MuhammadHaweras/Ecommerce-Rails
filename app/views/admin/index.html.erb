<h2>Admin Dashboard</h2>

<div class="container mt-8">
    <h3 class="text-2xl text-gray-800 font-medium mb-4">Daily Stats</h3>
    <div class="row gap-10">
        <div class="col-md-6">
            <div class="card bg-gradient-to-r from-gray-400 to-gray-300">
                <div class="card-body">
                    <h5 class="card-title">Revenue</h5>
                    <p class="card-text">
                        $<%= @quick_stats[:revenue] ?  (@quick_stats[:revenue]/100.0).to_s : "0" %>
                    </p>
                </div>
            </div>
        </div>

				<div class="col-md-6">
            <div class="card bg-gradient-to-r from-gray-400 to-gray-300">
                <div class="card-body">
                    <h5 class="card-title">Total Sales</h5>
                    <p class="card-text">
                        <%= @quick_stats[:sales] ?  (@quick_stats[:sales]).to_s : "0" %>
                    </p>
                </div>
            </div>
        </div>

				<div class="col-md-6">
            <div class="card bg-gradient-to-r from-gray-400 to-gray-300">
                <div class="card-body">
                    <h5 class="card-title">Avg Sales</h5>
                    <p class="card-text">
                        $<%= @quick_stats[:avg_sale] ?  (@quick_stats[:avg_sale]/100.0).to_s : "0" %>
                    </p>
                </div>
            </div>
        </div>

				<div class="col-md-6">
            <div class="card bg-gradient-to-r from-gray-400 to-gray-300">
                <div class="card-body">
                    <h5 class="card-title">Items per Sale</h5>
                    <p class="card-text">
                        <%= (@quick_stats[:per_sale]).to_i %>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
